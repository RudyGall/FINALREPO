@Model SocialMediaSat.Models.TrendList

@{
    ViewBag.Title = "Trends";
}

<h2 style="color:#FFCB9A">Trends</h2>
<div >
    <div id="ReturnParent" >
        @{ foreach (var trend in Model.Trends)
            {
                <div id="SearchReturn">
                    <p class="white-text">Name: @trend.Name</p>
                    <p class="white-text">Url: <a href="@trend.Url">@trend.Url</a></p>
                    <p class="white-text">Promoted Content: @trend.PromotedContent</p>
                    <p class="white-text">Query: @trend.Query</p>
                    <p class="white-text">Tweet Volume: @trend.TweetVolume</p>
                </div>
            }
        }
    </div>
</div>